<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:padding="20dp"
    android:background="@drawable/background_alertdialog"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="modification de produit"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/modifier_code_a_barre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:hint="code a barre"
        android:inputType="textEmailAddress"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/modifier_nom_de_produit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:hint="nom de produit"
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/modifier_code_a_barre"
        tools:layout_editor_absoluteX="12dp" />


    <EditText
        android:id="@+id/modifier_dete_de_premeption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:hint="dete de premeption"
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/modifier_nom_de_produit"
        tools:layout_editor_absoluteX="12dp" />
    <EditText
        android:id="@+id/modifier_quantitu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:hint="quantity"
        android:inputType="number"
        android:padding="14dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/modifier_dete_de_premeption"
        tools:layout_editor_absoluteX="12dp" />

    <EditText
        android:id="@+id/modifier_prix_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_edittext"
        android:ems="10"
        android:hint="prix"
        android:inputType="number"
        android:padding="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifier_quantitu" />

    <Button
        android:id="@+id/modifier_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_button"
        android:text="Modifier"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifier_prix_product" />
</androidx.constraintlayout.widget.ConstraintLayout>