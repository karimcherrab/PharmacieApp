<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/click_product"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="8dp"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
       app:contentPadding="12dp"

        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"

        >
        <LinearLayout
            android:id="@+id/product_total"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:orientation="horizontal"
            android:weightSum="1"

            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.55"
                >


                <TextView
                    android:id="@+id/commande_ref"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.24"
                    android:gravity="center_vertical"
                    android:text="Ref : 2897DF893"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/commande_number_produit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.24"
                    android:gravity="center_vertical"
                    android:text="10 PRODUITS"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/commande_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.24"
                    android:gravity="center_vertical"
                    android:text="rabah aouar"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/commande_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.28"
                    android:gravity="center_vertical"
                    android:text="mohamed boudiaf aozfpazkfakofpa"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.4"
                >


                <TextView
                    android:id="@+id/commande_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.24"
                    android:gravity="center"
                    android:text="30/10/2021"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/commande_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.24"
                    android:gravity="center"
                    android:text="10:25"
                    android:textColor="#AFAFAF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/commande_prix"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.24"
                    android:gravity="center"
                    android:text="1500 DA"
                    android:textColor="@color/jaune"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.045"
                    android:gravity="center"
                    android:textColor="@color/jaune"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/commande_status"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.16"
                    android:textColor="@color/white"
                    android:background="@drawable/background_button"
                    android:text="en attante" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.045"
                    android:gravity="center"
                    android:textColor="@color/jaune"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>