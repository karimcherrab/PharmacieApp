<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/click_product"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="8dp"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="5dp"


        >
        <LinearLayout
            android:id="@+id/product_total"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:weightSum="1"

            >

            <LinearLayout
                android:id="@+id/product_pair"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_alertdialog"
                android:orientation="vertical"

                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageProduct_pair"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/nomProduct_pair"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.17"
                    android:gravity="center_vertical"
                    android:text="paracetamol 5 g"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dateProduct_pair"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.17"
                    android:gravity="center_vertical"
                    android:text="2019/02/18"
                    android:textColor="#000000"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/prixProduct_pair"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.17"
                    android:gravity="left|center_vertical"
                    android:text="Prix : 150"
                    android:textColor="@color/vert"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <EditText
                android:id="@+id/ajouter_au_panier_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_btn_reduis_10"
                android:drawableLeft="@drawable/ic_store"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:inputType="text"
                android:padding="12dp"
                android:text="Ajoute"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>